<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMM_LAB_v1_S15_16.Views.ProductsPage">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout.Padding>
                <OnPlatform 
                    x:TypeArguments="Thickness"
                    Android="20"
                    iOS="50"/>
            </StackLayout.Padding>
            <StackLayout Orientation="Horizontal">
                <Button Text="Add"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand" 
                    Command="{Binding NewProductCommand}"                             
                         />
                <Button Text="List"                  
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand" 
                    Command="{Binding LoadProductsCommand}"                             
                         />
            </StackLayout>
            <ListView
                x:Name="celda"
                ItemsSource="{Binding Products}"
                HasUnevenRows="True"            
                SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame
                                CornerRadius="20"
                                HasShadow="True"
                                Margin="3">

                                <StackLayout
                                    Orientation="Vertical">
                                    <Grid
                                    x:Name="Item"
                                    VerticalOptions="CenterAndExpand">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Label 
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Text="ID: "
                                            FontAttributes="Bold"/>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Text="{Binding Id}"/>

                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Text="Name: "
                                            FontAttributes="Bold"/>

                                        <Label 
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Text="{Binding Name}"/>

                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Text="Description: "
                                            FontAttributes="Bold"/>

                                        <Label 
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Text="{Binding Description}"/>

                                        <Label
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Text="Expiration Date: "
                                            FontAttributes="Bold"/>

                                        <Label
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Text="{Binding ExpirationDate}"/>

                                        <Label
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Text="Is New: "
                                            FontAttributes="Bold"/>

                                        <Label
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Text="{Binding IsNew}"/>
                                        <Label
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            Text="Stock: "
                                            FontAttributes="Bold"/>

                                        <Label
                                            Grid.Row="5"
                                            Grid.Column="1"
                                            Text="{Binding Stock}"/>
                                        <Button
                                            Grid.Row="6"
                                            Grid.Column="0"
                                            Text="Actualizar"                  
                                            
                                            
                                            BindingContext="{Binding Source={x:Reference celda}, Path=BindingContext}" 
                                            Command="{Binding UpdateProductCommand}"  
                                            CommandParameter="{Binding Source={x:Reference Item}, Path=BindingContext}"
                                                 />
                                        <Button
                                            Grid.Row="6"
                                            Grid.Column="1"
                                            Text="Eliminar"                  
                                            
                                            
                                            BindingContext="{Binding Source={x:Reference celda}, Path=BindingContext}" 
                                            Command="{Binding DeleteProductCommand}"  
                                            CommandParameter="{Binding Source={x:Reference Item}, Path=BindingContext}"
                                                 />
                                    </Grid>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>